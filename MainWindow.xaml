<Window x:Class="RecipeManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Manager" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">

                <MenuItem Header="Exit" Click="Exit_Click"/>
      
               <MenuItem Header="Add New Recipe" Click="AddRecipe_Click"/>
            <MenuItem Header="View Recipes" Click="ViewRecipes_Click"/>

            <MenuItem Header="Filter Recipes" Click="NavigateToFilterRecipes_Click"/>

        </Menu>
        <Frame x:Name="MainContent"/>
    </DockPanel>
</Window>
